@{
    ViewData["Title"] = "Sessions";
}

<div style="height: 100%">
    <div class="row my-3">
        <div class="col-xl-12">
            <div class="card overflow-auto mh-100">
                <div class="card-body p-4 d-flex flex-column">

                    <div class="row justify-content-between">
                        <div class="col-sm-6 mb-sm-2">
                            <div class="row h-100 ">
                                <div class="col-lg-6 align-self-center">
                                    <p class="fw-bold fs-5 mb-0">All Sessions</p>
                                </div>
                                <div class="col-lg-6 align-self-center py-1">
                                    <input type="text" id="searchInput" placeholder="Search..." />
                                </div>
                            </div>

                        </div>

                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-lg-5 py-1">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">From</span>
                                        </div>
                                        <input type="date" class="form-control" id="from-date" name="from-date">
                                    </div>
                                </div>
                                <div class="col-lg-5 py-1">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
