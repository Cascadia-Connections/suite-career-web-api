@model SuiteCareers.ViewModels.DashboardVM

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}



<div style="height: 100%">

    <!-- Snapshot Bar -->  
    <div id="snapshot-bar" class="card rounded p-3" style="background-color: #DFECF0;">
        <div class="row mb-3">
            <div class="col-auto">
                <span>Filter by Date:</span>
            </div>
            <div class="col-auto">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">From Date</span>
                    </div>
                    <input type="date" class="form-control" id="from-date" name="from-date" @*asp-for="FromDate"*@>
                </div>
            </div>
            <div class="col-auto">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">To Date</span>
                    </div>
                    <input type="date" class="form-control" id="to-date" name="to-date" @*asp-for="ToDate"*@>
                </div>
            </div>
            <div class="col-auto">
                <button id="filter" type="submit" class="btn btn-primary">Filter</button>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-2 mb-3">
                <div class="card square bg-white rounded p-3 d-flex flex-column align-items-center">
                    <div class="top-text align-self-center">New Users</div>
                    <div class="bottom-text align-self-center">@Model.NewUser</div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-2 mb-3">
                <div class="card square bg-white rounded p-3 d-flex flex-column align-items-center">
                    <div class="top-text align-self-center">Total Users</div>
                    <div class="bottom-text align-self-center">@Model.TotalUsers</div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-2 mb-3">
                <div class="card square bg-white rounded p-3 d-flex flex-column align-items-center">
                    <div class="top-text align-self-center">Avg. Session Length</div>
                    <div class="bottom-text align-self-center">@*@Model.AvgSession*@</div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-2 mb-3">
                <div class="card square bg-white rounded p-3 d-flex flex-column align-items-center">
                    <div class="top-text align-self-center">Total Sessions</div>
                    <div class="bottom-text align-self-center">@Model.TotalSessions</div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-2 mb-3">
                <div class="card square bg-white rounded p-3 d-flex flex-column align-items-center">
                    <div class="top-text align-self-center">Questions Answered</div>
                    <div class="bottom-text align-self-center">@*@Model.QuestionsAnswered*@</div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-2 mb-3">
                <div class="card square bg-white rounded p-3 d-flex flex-column align-items-center">
                    <div class="top-text align-self-center">New Questions</div>
                    <div class="bottom-text align-self-center">@*@Model.NewQuestions*@</div>
                </div>
            </div>
        </div>
    </div>
    <!--------------------------------------->

    <div class="row content-lower-half my-3">
        <div class="col-md-6 lower-half-content-left-side">

                <!-- Active Info -->
               <div id="active-info" class="row">
                   <div class="col-sm-6">
                   <div class="activeUsers, card">
                       <div class="card-body">
                           <p class="my-1 text-center">Active Users: <span style="font-weight: bold; font-size: large">27</span>/80</p>
                       </div>
                   </div>
                </div>
                <div class="col-sm-6">
                    <div class="card activeSessions">
                    <div class="card-body">
                            <p class="my-1 text-center">Active Sessions: <span style="font-weight: bold; font-size: large">18</span></p>
                       </div>
                    </div>
                   </div>
               </div>

            <!-- Recent Sessions -->
            <div id="recent-sessions" class="card my-3 overflow-auto">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="d-flex justify-content-between pe-4">
                        <p class="fw-bold fs-5">Recent Sessions</p>
                        <a href="#" class="link-secondary">View All</a>
                    </div>
                    <div class="flex-fill d-flex">
                        <table class="table table-hover flex-fill mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">User</th>
                                    <th scope="col">Completed</th>
                                    <th scope="col">Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var recentSession in Model.RecentSessions) 
                                { 
                                <tr>
                                    <td scope="row">
                                       @recentSession.User.FirstName @recentSession.User.LastName
                                     </td>
                                     <td scope="row">
                                        @recentSession.Date
                                     </td>
                                     <td scope="row">
                                       @*Session length data*@
                                     </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                 </div>
             </div>

        </div>
        <div class="col-md-6 lower-half-content-right-side">

            <!-- Top Questions -->
            <div class="card overflow-auto" id="top-questions">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="d-flex justify-content-between pe-4">
                        <p class="fw-bold fs-5">Top Questions</p>
                        <a href="#" class="link-secondary">View All</a>
                    </div>
                    <div class="flex-fill d-flex">
                        <table class="table table-hover flex-fill mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Question</th>
                                    <th scope="col">Sessions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td scope="row">"What sparked your interest in this position?"<br/><span class="badge rounded-pill bg-primary">Original</span></td>
                                    <td>320</td>
                                </tr>
                                <tr>
                                    <td scope="row">"What are your long-term career goals?"<br /><span class="badge rounded-pill bg-secondary">User-Generated</span></td>
                                    <td>288</td>
                                </tr>
                                <tr>
                                    <td scope="row">"What are you passionate about?"<br /><span class="badge rounded-pill bg-primary">Original</span></td>
                                    <td>201</td>
                                </tr>
                                <tr>
                                    <td scope="row">"How do you handle conflict or difficult conversations with coworkers or managers?"<br /><span class="badge rounded-pill bg-primary">Original</span></td>
                                    <td>196</td>
                                </tr>
                                <tr>
                                    <td scope="row">"What are your strengths and weaknesses?"<br /><span class="badge rounded-pill bg-secondary">User-Generated</span></td>
                                    <td>153</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>



    

</div>
