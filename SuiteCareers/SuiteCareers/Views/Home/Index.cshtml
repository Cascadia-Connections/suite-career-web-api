@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div style="height: 100%">

    <!-- Snapshot Placeholder -->
    <div class="snapshot-placeholder card my-3">
        <div class="card-body">
        </div>
    </div>

    <div class="row content-lower-half my-3">
        <div class="col-md-6 lower-half-content-left-side">

                <!-- Active Info -->
               <div id="active-info" class="row">
                   <div class="col-sm-6">
                   <div class="activeUsers, card">
                       <div class="card-body">
                           <p class="my-1 text-center">Active Users: <span style="font-weight: bold; font-size: large">27</span>/80</p>
                       </div>
                   </div>
                </div>
                <div class="col-sm-6">
                    <div class="card activeSessions">
                    <div class="card-body">
                            <p class="my-1 text-center">Active Sessions: <span style="font-weight: bold; font-size: large">18</span></p>
                       </div>
                    </div>
                   </div>
               </div>

            <!-- Recent Sessions -->
            <div id="recent-sessions" class="card my-3 overflow-auto">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="d-flex justify-content-between pe-4">
                        <p class="fw-bold fs-5">Recent Sessions</p>
                        <a href="#" class="link-secondary">View All</a>
                    </div>
                    <div class="flex-fill d-flex">
                        <table class="table table-hover flex-fill mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">User</th>
                                    <th scope="col">Completed</th>
                                    <th scope="col">Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td scope="row">Fergy Thomas</td>
                                    <td>05/29/2023 09:45 AM</td>
                                    <td>10m 23s</td>
                                </tr>
                                <tr>
                                    <td scope="row">Samantha Patel</td>
                                    <td>05/29/2023 09:34 AM</td>
                                    <td>15m 35s</td>
                                </tr>
                                <tr>
                                    <td scope="row">Olivia Miller</td>
                                    <td>05/29/2023 09:18 AM</td>
                                    <td>19m 10s</td>
                                </tr>
                                <tr>
                                    <td scope="row">Ethan Kim</td>
                                    <td>05/29/2023 09:12 AM</td>
                                    <td>23m 42s</td>
                                </tr>
                                <tr>
                                    <td scope="row">Alexander Lee</td>
                                    <td>05/29/2023 09:09 AM</td>
                                    <td>9m 28s</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                 </div>
             </div>

        </div>
        <div class="col-md-6 lower-half-content-right-side">

            <!-- Top Questions -->
            <div class="card overflow-auto" id="top-questions">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="d-flex justify-content-between pe-4">
                        <p class="fw-bold fs-5">Top Questions</p>
                        <a href="#" class="link-secondary">View All</a>
                    </div>
                    <div class="flex-fill d-flex">
                        <table class="table table-hover flex-fill mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Question</th>
                                    <th scope="col">Sessions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td scope="row">"What sparked your interest in this position?"<br/><span class="badge rounded-pill bg-primary">Original</span></td>
                                    <td>320</td>
                                </tr>
                                <tr>
                                    <td scope="row">"What are your long-term career goals?"<br /><span class="badge rounded-pill bg-secondary">User-Generated</span></td>
                                    <td>288</td>
                                </tr>
                                <tr>
                                    <td scope="row">"What are you passionate about?"<br /><span class="badge rounded-pill bg-primary">Original</span></td>
                                    <td>201</td>
                                </tr>
                                <tr>
                                    <td scope="row">"How do you handle conflict or difficult conversations with coworkers or managers?"<br /><span class="badge rounded-pill bg-primary">Original</span></td>
                                    <td>196</td>
                                </tr>
                                <tr>
                                    <td scope="row">"What are your strengths and weaknesses?"<br /><span class="badge rounded-pill bg-secondary">User-Generated</span></td>
                                    <td>153</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="container">                                     <!--The container for the whole dang thing-->
   <div id="snapshot-bar" class="row justify-content-center align-items-center">
    <div class="custom-date-range">                         <!--Container for the date search fields-->
        </div>
        <span>Filter by Date:</span>
        <label for="from-date"></label>                     <!--What will be populated in the from-date field initially-->
        <input type="date" id="from-date" name="from-date"> <!--Input field for "From Date"-->
        <span>to</span>
        <label for="to-date"></label>                       <!--What will be populated in the to-date field initially-->
        <input type="date" id="to-date" name="to-date">     <!--input field for "To Date"-->
        <button id="filter" type="submit">Filter</button>


    </div>

    <!-- Square 1-->
    <div class="square col-md-2 col-4">                     <!--The container for each white square-->
        <div class="top-text">Top Text 1</div>              <!--The top text in this white square-->
        <div class="bottom-text">Bottom Text 1</div>        <!--The bottom text in this white square-->
    </div>

    <!--Square 2-->
    <div class="square col-md-2 col-4">
        <div class="top-text">Top Text 2</div>
        <div class="bottom-text">Bottom Text 2</div>
    </div>

    <!-- Square 3-->
    <div class="square col-md-2 col-4">
        <div class="top-text">Top Text 3</div>
        <div class="bottom-text">Bottom Text 3</div>
    </div>

    <!--Square 4-->
    <div class="square col-md-2 col-4">
        <div class="top-text">Top Text 4</div>
        <div class="bottom-text">Bottom Text 4</div>
    </div>

    <!--Square 5-->
    <div class="square col-md-2 col-4">
        <div class="top-text">Top Text 5</div>
        <div class="bottom-text">Bottom Text 5</div>
    </div>

    <!--Square 6-->
    <div class="square col-md-2 col-4">
        <div class="top-text">Top Text 6</div>
        <div class="bottom-text">Bottom Text 6</div>
    </div>

</div>
